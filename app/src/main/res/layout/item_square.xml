<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="14dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFB300">

            <TextView
                android:id="@+id/item_title_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:padding="7dp"
                android:text=" Dollar  1,00"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/item_title_difference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:padding="7dp"
                android:text=" difference  00.21"
                android:textColor="#DC1010"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/item_title_eng"
                app:layout_constraintTop_toBottomOf="@id/item_title_eng" />

            <TextView
                android:id="@+id/item_title_uzb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:padding="7dp"
                android:text=" Som  11367,93"
                android:textColor="#28B52E"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/item_title_difference"
                app:layout_constraintTop_toBottomOf="@id/item_title_difference" />

            <TextView
                android:id="@+id/item_title_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:padding="7dp"
                android:text=" USD"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/item_title_uzb"
                app:layout_constraintTop_toBottomOf="@id/item_title_uzb" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>